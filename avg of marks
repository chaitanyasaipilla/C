#include<stdio.h>
void main()
{
int math,phy,chem,total,avg;

printf("Enter the marks of maths:"); //input
scanf("%d",&math);

printf("Enter the marks of physics:");
scanf("%d",&phy);

printf("Enter the marks of chemistry:");
scanf("%d",&chem);

total=math+phy+chem;
avg=total/3; //calculation

printf("total is   :%6d\n",total); //output
printf("avg is     :%6d\n",avg);
}
