#include<stdio.h>
#include<stdlib.h>
#include<time.h>
void main()
{
int a[10];
int i;
srand(time(0));
for(i=0;i<10;i++)
{
a[i]=rand() % 50;
printf("%5d",a[i]);
}
printf("\n");

printf("even numbers:\n");

for(i=0;i<10;i++)
{
if(a[i] % 2 == 0)
    printf("\n%5d",a[i]);
}
printf("\n");

printf("odd numbers:\n");


for(i=0;i<10;i++)
{
    if(a[i] % 2 == 1)
        printf("\n%5d",a[i]);
}
}

